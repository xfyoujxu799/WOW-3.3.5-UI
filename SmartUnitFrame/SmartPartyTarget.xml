<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="SmartPartyTarget.lua"/>

	<Button name="PartyTargetFrameTemplate" frameStrata="LOW" toplevel="true" movable="true" inherits="SecureUnitButtonTemplate" parent="UIParent" virtual="true">
		<Size>
			<AbsDimension x="128" y="53"/>
		</Size>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentPortrait">
					<Size>
						<AbsDimension x="37" y="37"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="7" y="-6"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<Frame name="$parentDropDown" inherits="UIDropDownMenuTemplate" id="1" hidden="true">
				<Size>
					<AbsDimension x="10" y="10"/>
				</Size>
				<Anchors>
					<Anchor point="TOP">
						<Offset>
							<AbsDimension x="-20" y="-10"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						PartyTargetFrameDropDown_OnLoad(self);
					</OnLoad>
				</Scripts>
			</Frame>
			<StatusBar name="$parentHealthBar">
				<Size>
					<AbsDimension x="70" y="8"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="47" y="-12"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnValueChanged>
						UnitFrameHealthBar_OnValueChanged(self, arg1);
						PartyTargetFrame_HealthCheck(self);
					</OnValueChanged>
				</Scripts>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
			</StatusBar>
			<StatusBar name="$parentManaBar">
				<Size>
					<AbsDimension x="70" y="8"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="47" y="-21"/>
						</Offset>
					</Anchor>
				</Anchors>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
				<BarColor r="0" g="0" b="1.0"/>
			</StatusBar>
			<Frame setAllPoints="true">
				<Layers>
					<Layer level="OVERLAY">
						<Texture name="$parentClassIcon">
							<Size>
								<AbsDimension x="24" y="24"/>
							</Size>
							<Anchors>
								<Anchor point="CENTER" RelativeTo="$parentPortrait" RelativePoint="TOPRIGHT">
									<Offset>
										<AbsDimension x="-1" y="-5"/>
									</Offset>
								</Anchor>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<Scripts>
					<OnLoad>
						RaiseFrameLevel(self)
					</OnLoad>
				</Scripts>
			</Frame>
			<Frame setAllPoints="true">
				<Layers>
					<Layer level="ARTWORK">
						<Texture name="$parentTexture" file="Interface\TargetingFrame\UI-PartyFrame">
							<Size>
								<AbsDimension x="128" y="64"/>
							</Size>
							<Anchors>
								<Anchor point="TOPLEFT">
									<Offset>
										<AbsDimension x="0" y="-2"/>
									</Offset>
								</Anchor>
							</Anchors>
						</Texture>
						<FontString name="$parentName" inherits="GameFontNormalSmall">
							<Anchors>
								<Anchor point="BOTTOMLEFT">
									<Offset>
										<AbsDimension x="50" y="43"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
					<Layer level="OVERLAY">
						<Texture name="$parentLeaderIcon" file="Interface\GroupFrame\UI-Group-LeaderIcon" hidden="true">
							<Size>
								<AbsDimension x="16" y="16"/>
							</Size>
							<Anchors>
								<Anchor point="TOPLEFT"/>
							</Anchors>
						</Texture>
						<Texture name="$parentPVPIcon" hidden="true">
							<Size>
								<AbsDimension x="32" y="32"/>
							</Size>
							<Anchors>
								<Anchor point="TOPLEFT">
									<Offset>
										<AbsDimension x="-9" y="-15"/>
									</Offset>
								</Anchor>
							</Anchors>
						</Texture>
						<Texture name="$parentHighLevelTexture" file="Interface\TargetingFrame\UI-TargetingFrame-Skull">
							<Size>
								<AbsDimension x="16" y="16"/>
							</Size>
							<Anchors>
								<Anchor point="BOTTOMRIGHT">
									<Offset>
										<AbsDimension x="-80" y="43"/>
									</Offset>
								</Anchor>
							</Anchors>
						</Texture>
						<Texture name="$parentDisconnect" file="Interface\CharacterFrame\Disconnect-Icon" hidden="true">
							<Size>
								<AbsDimension x="64" y="64"/>
							</Size>
							<Anchors>
								<Anchor point="LEFT">
									<Offset>
										<AbsDimension x="-7" y="-1"/>
									</Offset>
								</Anchor>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad>
				PartyTargetFrame_OnLoad(self);
			</OnLoad>
			<OnEvent>
				PartyTargetFrame_OnEvent(self, event, ...);
			</OnEvent>
			<OnEnter>
				UnitFrame_OnEnter(self);
			</OnEnter>
			<OnLeave>
				UnitFrame_OnLeave(self);
			</OnLeave>
			<OnUpdate>
				PartyTargetFrame_OnUpdate(self, arg1);
			</OnUpdate>
		</Scripts>
	</Button>

	<Button name="PartyTargetFrame1" inherits="PartyTargetFrameTemplate" id="1">
		<Anchors>
			<Anchor point="TOPLEFT" relativeTo="PartyMemberFrame1" relativePoint="TOPRIGHT">
				<Offset>
					<AbsDimension x="172" y="0"/>
				</Offset>
			</Anchor>
		</Anchors>
	</Button>
	<Button name="PartyTargetFrame2" inherits="PartyTargetFrameTemplate" id="2">
		<Anchors>
			<Anchor point="TOPLEFT" relativeTo="PartyMemberFrame2" relativePoint="TOPRIGHT">
				<Offset>
					<AbsDimension x="172" y="0"/>
				</Offset>
			</Anchor>
		</Anchors>
	</Button>
	<Button name="PartyTargetFrame3" inherits="PartyTargetFrameTemplate" id="3">
		<Anchors>
			<Anchor point="TOPLEFT" relativeTo="PartyMemberFrame3" relativePoint="TOPRIGHT">
				<Offset>
					<AbsDimension x="172" y="0"/>
				</Offset>
			</Anchor>
		</Anchors>
	</Button>
	<Button name="PartyTargetFrame4" inherits="PartyTargetFrameTemplate" id="4">
		<Anchors>
			<Anchor point="TOPLEFT" relativeTo="PartyMemberFrame4" relativePoint="TOPRIGHT">
				<Offset>
					<AbsDimension x="172" y="0"/>
				</Offset>
			</Anchor>
		</Anchors>
	</Button>

	<Frame name="SmartPartyTargetFrameTemplate" virtual="true">
		<Anchors>
			<Anchor point="TOPLEFT">
				<Offset>
					<AbsDimension x="0" y="0"/>
				</Offset>
			</Anchor>
			<Anchor point="BOTTOMRIGHT"/>
		</Anchors>
		<Frames>
			<Frame setAllPoints="true">
				<Layers>
					<Layer level="ARTWORK">
						<FontString name="$parentHealthLoss" inherits="SmartStatusBarText" justifyH="CENTER">
							<Anchors>
								<Anchor point="CENTER">
									<Offset>
										<AbsDimension x="18" y="7"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
						<FontString name="$parentLevelText" inherits="GameFontNormalSmall" justifyH="RIGHT">
							<Color r="1.0" g="0.82" b="0.0"/>
							<Anchors>
								<Anchor point="BOTTOMRIGHT">
									<Offset>
										<AbsDimension x="-80" y="43"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
						<FontString name="$parentStatusText" inherits="GameFontNormalSmall" justifyH="CENTER" hidden="true">
							<Color r="1.0" g="0.82" b="0"/>
							<Anchors>
								<Anchor point="CENTER">
									<Offset>
										<AbsDimension x="18" y="7"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
						<FontString name="$parentHealthPercent" inherits="SmartStatusBarText" justifyH="RIGHT">
							<Anchors>
								<Anchor point="RIGHT">
									<Offset>
										<AbsDimension x="25" y="7"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
						<FontString name="$parentManaPercent" inherits="SmartStatusBarText" justifyH="RIGHT">
							<Anchors>
								<Anchor point="RIGHT">
									<Offset>
										<AbsDimension x="55" y="7"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
						<FontString name="$parentHealthBarText" inherits="SmartStatusBarText" justifyH="RIGHT">
							<Color r="1.0" g="1" b="1"/>
							<Anchors>
								<Anchor point="CENTER">
									<Offset>
										<AbsDimension x="100" y="10"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
						<FontString name="$parentManaBarText" inherits="SmartStatusBarText" justifyH="RIGHT">
							<Color r="1.0" g="0.82" b="0.0"/>
							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="$parentHealthBarText" relativePoint="BOTTOMLEFT">
									<Offset>
										<AbsDimension x="0" y="0"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad>
				SmartPartyTarget_OnLoad(self)
			</OnLoad>
			<OnEvent>
				SmartPartyTarget_OnEvent(self, event, ...)
			</OnEvent>
		</Scripts>
	</Frame>

	<Frame name="SmartPartyTargetFrame1" inherits="SmartPartyTargetFrameTemplate" parent="PartyTargetFrame1" id="1"/>
	<Frame name="SmartPartyTargetFrame2" inherits="SmartPartyTargetFrameTemplate" parent="PartyTargetFrame2" id="2"/>
	<Frame name="SmartPartyTargetFrame3" inherits="SmartPartyTargetFrameTemplate" parent="PartyTargetFrame3" id="3"/>
	<Frame name="SmartPartyTargetFrame4" inherits="SmartPartyTargetFrameTemplate" parent="PartyTargetFrame4" id="4"/>
</Ui>
