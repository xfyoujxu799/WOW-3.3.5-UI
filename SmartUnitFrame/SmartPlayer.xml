<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/FrameXML/UI.xsd">
	<Script file="SmartPlayer.lua"/>

	<Frame name="SmartPlayerFrame" parent="PlayerFrame" hidden="false">
		<Frames>
			<Frame name="SmartPlayerTextureFrame" setAllPoints="true">
				<Layers>
					<Layer level="ARTWORK">
						<FontString name="SmartPlayerHealthBarText" inherits="SmartStatusBarText" JustifyH="CENTER" />
						<FontString name="SmartPlayerManaBarText" inherits="SmartStatusBarText" JustifyH="CENTER" />
						<FontString name="SmartPlayerHealthPercent" inherits="SmartStatusBarText" JustifyH="CENTER" />
						<FontString name="SmartPlayerManaPercent" inherits="SmartStatusBarText" JustifyH="CENTER" />
					</Layer>
				</Layers>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad>
				SmartPlayer_OnLoad(self);
			</OnLoad>
			<OnEvent>
				SmartPlayer_OnEvent(self, event, ...);
			</OnEvent>
			<OnUpdate>
				SmartPlayer_OnUpdate(self, elapsed);
			</OnUpdate>
		</Scripts>
	</Frame>
</Ui>
